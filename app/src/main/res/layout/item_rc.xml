<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="@dimen/layout_width_heigth_big">

    <ImageView
        android:layout_centerVertical="true"
        android:layout_width="@dimen/layout_width_heigth_mid"
        android:layout_height="@dimen/layout_width_heigth_mid"
        android:layout_marginLeft="@dimen/margin_big"
        android:id="@+id/avatar"
        android:src="@drawable/ic_launcher_foreground"
        />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_mid"
        android:layout_marginTop="@dimen/margin_big"
        android:layout_toRightOf="@id/avatar">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nguyen Van A"
            android:textSize="@dimen/text_13"
            android:textColor="@android:color/black"
            android:id="@+id/tvName"
            />
        <ImageView
            android:layout_width="@dimen/layout_width_heigth_small"
            android:layout_height="@dimen/layout_width_heigth_small"
            android:id="@+id/phoneImage"
            android:layout_below="@id/tvName"
            android:src="@drawable/ic_phone"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvName"
            android:layout_toRightOf="@id/phoneImage"
            android:layout_marginLeft="@dimen/margin_small"
            android:text="02929891"
            android:textSize="@dimen/text_13"
            android:id="@+id/tvPhoneNumber"
            />
    </RelativeLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/margin_small"
        android:text="0"
        android:textSize="@dimen/text_13"
        android:textColor="@color/color_blue_light"
        android:id="@+id/active"
        />
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/layout_1"
        android:layout_alignParentBottom="true"
        android:background="@color/color_light_high"
        android:layout_marginLeft="@dimen/margin_mid"
        />

</RelativeLayout>